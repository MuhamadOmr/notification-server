{
  "env": {
    "node": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8
  },
  "extends": "prettier",
  "rules": {
    "comma-spacing": ["error", {
      "before": false,
      "after": true
    }],
    "indent": ["off"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["off", "single"],
    "semi": ["off", "always"]
  }
}