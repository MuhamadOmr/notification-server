{
  "name": "notification-server",
  "version": "1.0.0",
  "description": "swvl notification Server api",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "compose": "cross-env NODE_ENV=compose node server.js",
    "test": "cross-env NODE_ENV=test node node_modules/lab/bin/lab -v -C -I __core-js_shared__,core",
    "test-cov-html": "lab -r html -o coverage.html",
    "lint": "eslint '**/*.js'",
    "lint:fix": "eslint --fix '**/*.js'",
    "precommit": "lint-staged",
    "up": "yarn upgrade-interactive --latest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:muhamadomr/notification-server.git"
  },
  "engines": {
    "node": ">= 10.13.0",
    "npm": ">= 3.10",
    "yarn": ">=0.20.3"
  },
  "keywords": [
    "hapi",
    "hapijs",
    "mongoose",
    "swvl"
  ],
  "author": "Muhamad Omar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/muhamadomr/notification-server/issues"
  },
  "homepage": "https://github.com/muhamadomr/notification-server#readme",
  "dependencies": {
    "bluebird": "^3.5.3",
    "boom": "^7.3.0",
    "bull": "^3.7.0",
    "config": "^3.0.0",
    "cross-env": "^5.2.0",
    "forwarded": "^0.1.2",
    "glob": "^7.1.3",
    "glue": "^5.0.0",
    "hapi": "^17.8.1",
    "hapi-swagger": "^9.3.2",
    "inert": "^5.1.2",
    "joi": "^14.3.1",
    "joi-objectid": "^2.0.0",
    "lodash": "^4.17.11",
    "moment": "^2.23.0",
    "moment-timezone": "^0.5.23",
    "mongoose": "^5.4.1",
    "vision": "^5.4.4"
  },
  "devDependencies": {
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "babel-eslint": "8",
    "code": "^5.2.4",
    "cross-env": "^5.2.0",
    "eslint": "^5.11.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-hapi": "^12.0.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-hapi": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.0",
    "lab": "^18.0.2",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.10",
    "prettier": "^1.15.3"
  },
  "lint-staged": {
    "linters": {
      "**.js": [
        "prettier --write",
        "eslint **/*.js",
        "eslint --fix **/*.js",
        "git add"
      ]
    },
    "ignore": [
      ".gitignore",
      ".git",
      "node_modules"
    ]
  }
}
