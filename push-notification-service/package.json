{
  "name": "push-notification-service",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
	"start": "node main.js",
    "test": "node_modules/.bin/mocha -c --recursive ./test/**.js",
    "lint": "eslint '**/*.js'",
    "lint:fix": "eslint --fix '**/*.js'",
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:muhamadomr/notification-server.git"
  },
  "engines": {
    "node": ">= 10.13.0",
    "npm": ">= 3.10",
    "yarn": ">=0.20.3"
  },
  "keywords": [
    "hapi",
    "hapijs",
    "mongoose",
    "swvl"
  ],
  "author": "Muhamad Omar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/muhamadomr/notification-server/issues"
  },
  "homepage": "https://github.com/muhamadomr/notification-server#readme",
  "dependencies": {
    "bull": "^3.7.0",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "joi": "^14.3.1",
    "joi-objectid": "^2.0.0",
    "lodash": "^4.17.11",
    "moment": "^2.23.0",
    "moment-timezone": "^0.5.23",
    "mongoose": "^5.4.19",
    "node-gcm": "^1.0.2"
  },
  "devDependencies": {
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "babel-eslint": "8",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.11.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.0",
    "lint-staged": "^7.2.2",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "prettier": "^1.15.3"
  },
  "lint-staged": {
    "linters": {
      "**.js": [
        "prettier --write",
        "eslint '**/*.js'",
        "eslint --fix '**/*.js'",
        "git add"
      ]
    },
    "ignore": [
      ".gitignore",
      ".git",
      "node_modules"
    ]
  }
}
